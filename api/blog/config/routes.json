{
  "routes": [
    {
      "method": "GET",
      "path": "/blogs",
      "handler": "blog.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/blogs/:id",
      "handler": "blog.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/blogs/launch/:id",
      "handler": "blog.findPerLaunch",
      "config": {
        "policies": [],
        "description": "Get all blogs linked to a launch"
      }
    },
    {
      "method": "GET",
      "path": "/blogs/event/:id",
      "handler": "blog.findPerEvent",
      "config": {
        "policies": [],
        "description": "Get all blogs linked to an event"
      }
    }
  ]
}
